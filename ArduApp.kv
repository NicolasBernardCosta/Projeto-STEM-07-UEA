<MenuButton@Button>:
	font_size:'50sp'
	background_normal:'menuButton.png'
	background_down:'menuButtonpressed.png'
	border: 90,90,90,90

<Menu>:
	BoxLayout:
		canvas:
			Color:
				rgba:0.2,1,0.6,0.5
			Rectangle:
				size:self.size
				pos:self.pos
		orientation: 'vertical'
		padding: '200dp', '50dp'
		spacing:'100dp'
		Widget:
		BoxLayout:
			padding:"100dp"
			spacing:"150dp"
			MenuButton:
				text:'Start'
				on_press:
				on_release:app.root.current = 'game'
			MenuButton:
				text:'Exit'
				on_press:
				on_release:app.Stop()




#<MenuButton@Button>:
	#font_size:'50sp'
	#background_normal:'menuButton.png'
	#background_down:'menuButtonpressed.png'
	#border: 90,90,90,90

<Menu>:
	BoxLayout:
		canvas:
			Color:
				rgba:1,1,1,1
			Rectangle:
				size:self.size
				pos:self.pos
		orientation: 'vertical'
		padding: '200dp', '50dp'
		spacing:'100dp'
		Widget:
		BoxLayout:
			padding:"100dp"
			spacing:"150dp"
			Button:
				text:'Start'
				on_press:
				on_release:app.root.current = 'game'
			Button:
				text:'Exit'
				on_press:
				on_release:app.Stop()



<Game>:
	FloatLayout:
		canvas:
